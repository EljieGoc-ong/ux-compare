{
  "baseUrl": "http://localhost:5173/",
  "outputDir": "output",
  "threshold": 0.1,
  "failureThreshold": 1,
  "comment": "The 'name' property in each viewport is used as the key in 'designImages' to map designs to viewports",
  "viewports": [
    {
      "name": "mobile",
      "width": 390,
      "height": 844,
      "deviceScaleFactor": 2
    },
    {
      "name": "tablet",
      "width": 768,
      "height": 1024,
      "deviceScaleFactor": 2
    },
    {
      "name": "desktop",
      "width": 1440,
      "height": 900,
      "deviceScaleFactor": 1
    },
    {
      "name": "desktop-xl",
      "width": 1920,
      "height": 1080,
      "deviceScaleFactor": 1
    }
  ],
  "globalActions": [
    {
      "type": "goto",
      "url": "/login"
    },
    {
      "type": "type",
      "selector": "[name=email]",
      "text": "qa@example.com"
    },
    {
      "type": "type",
      "selector": "[name=password]",
      "text": "password123"
    },
    {
      "type": "click",
      "selector": "button[type=submit]"
    },
    {
      "type": "waitForSelector",
      "selector": "[data-dashboard]"
    }
  ],
  "pages": [
    {
      "name": "homepage",
      "path": "/",
      "designImage": "designs/homepage-desktop.png",
      "actions": [
        {
          "type": "waitForSelector",
          "selector": "[data-test=hero]"
        }
      ],
      "designImages": {
        "mobile": "designs/homepage-mobile.png",
        "tablet": "designs/homepage-tablet.png",
        "desktop": "designs/homepage-desktop.png",
        "desktop-xl": "designs/homepage-desktop-xl.png"
      }
    },
    {
      "name": "checkout",
      "path": "/checkout",
      "designImage": "designs/checkout-desktop.png",
      "designImages": {
        "mobile": "designs/checkout-mobile.png",
        "desktop": "designs/checkout-desktop.png"
      },
      "comment": "Note: tablet and desktop-xl designs omitted - they will be skipped if no design file exists"
    }
  ]
}